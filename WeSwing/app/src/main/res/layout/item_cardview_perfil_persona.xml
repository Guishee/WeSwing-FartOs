<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:theme="@style/barraroja">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <ImageView
            android:id="@+id/fotoPerfilImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profilecuatro"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:id="@+id/nombreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nombre de la persona"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/botonNormal2"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:text="seguir"
                />
            <TextView
                android:id="@+id/woki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                />
            <Button
                android:id="@+id/botonNormal"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:text="mensaje" />
        </LinearLayout>


        <TextView
            android:id="@+id/rolTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rol:"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/subRol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Rol de la persona" />

        <TextView
            android:id="@+id/tipoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tipo:"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/subTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tipo de la persona" />


        <TextView
            android:id="@+id/bioTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Bio:"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/subBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam at ullamcorper urna. Phasellus mauris arcu, tincidunt quis imperdiet vitae, dapibus vel dolor. Maecenas pharetra, libero sed fermentum tempus, urna sem accumsan nisi, eget porttitor mi est vel enim. Phasellus molestie." />


        <TextView
            android:id="@+id/cualidadesTituloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cualidades"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/cualidadesSubtituloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Cualidades de la persona" />


        <TextView
            android:id="@+id/seguidoresTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="NÃºmero de seguidores: 10"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/profesoresTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Profesores: 2"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/siguiendoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Siguiendo: 3"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/mogudesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Mogudes: 5"
            android:textSize="20dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
